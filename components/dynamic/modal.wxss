/* extend/modal.wxss */
.container {

  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  /*padding: 200rpx 0;*/
  box-sizing: border-box;
  background: #F0F4F3;
  overflow:hidden;
  padding: 0;
  font-size: 14rpx;
  color: #000;

  word-break:break-all;
  height: 1400rpx;
}

.feed-item{
  width: 690rpx;
  padding: 30rpx 30rpx 20rpx;
  margin: 7rpx 0 6rpx 0;
  background: #ffffff;
  border-top: 1px solid #eee;
  border-bottom: 1px solid #eee;
  box-shadow: 0 2px 5px #eeeeee;


}
.feed-source{
  width: 690rpx;
  left: 0;
  height: 50rpx;
  display: flex; 
 
}
.avatar{
  position: relative;
  display: inline-block;
}
.a-feed-source {
  display: inline-block;
  height: 40rpx;
}
.img-feed-source{
  /*position: absolute;*/
  display: inline-block;
  width: 45rpx;
  height: 45rpx;
  border-radius: 45rpx;
  top: 10rpx;
  vertical-align: middle;
}
.text-feed-source{
  /*position: absolute;*/
  display: inline-block;
  height: 40rpx;
  line-height: 40rpx;
  vertical-align: middle;
  margin: 0 0 0 15rpx;
  color: #a0acac;
  font-size: 26rpx;
}

.feed-content{
  padding: 10rpx 0 0 0;
}
 .question {
  font-size: 28rpx;
  font-weight: 600px;
  line-height: 40rpx;
  text-space: 5rpx;
}
.answer-body{
  padding: 10rpx 0 0 0;
  /*height: 10rpx;*/
  font-size: 24rpx;
  line-height: 28rpx;
  color: #5b5b5b;


}
.answer-actions{
  width: 690rpx;
  padding: 10rpx 0  0;
  color: #a0acac;
}
.lable-answer-actions{
  display: inline-block;
  vertical-align: text-bottom;
  padding: 0 10rpx 0 0;
  font-size: 24rpx;
}

/*-------------------------*/
.dynamic_card {
    border: 2px solid #ffffff;
    border-radius: 5px;
    background-color: #ffffff;
    box-shadow: 4px 1px 1px #cccccc;

    width: 100%;
    margin: 7rpx 0 6rpx 0;
    background: #ffffff;
    border-top: 1px solid #eee;
    border-bottom: 1px solid #eee;
 
}

.dynamic_image {
    width: 100%;
    height: 400rpx;
    padding-top: 5rpx;
    background-color: #eeeeee;
}

.dynamic_time {
    float: right;
    margin-top: 170px;
    color: #ffffff;
    position: absolute;
    right: 0;
    top: 0;
    z-index: 1;
    font-size: 12px;
}

.dynamic_title {
    padding: 14px;
    font-size: 14px;
}

