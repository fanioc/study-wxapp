





/*/----------------*/

page {
  background-color: white;
  height: 100%;
}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  word-break: break-all;
  background: #f0f4f3;
  position: absolute;
  width: 100%;
}
.dynamic_body{
  top:16%;
  position: absolute;
  background-color: lightgray;
  width: 100%;
}
.tag_body{
    top:8%;
  position: absolute;
    display: flex;
  flex-direction:row;
  align-items: center;
  justify-content: flex-start;
  width: 100%;
  
}
.tag{
    height:4%;
    padding: 10rpx 10rpx;
    border-radius: 28rpx;
    margin: 0 10rpx;
    border: solid #5b5b5b 2rpx;
    background-color: white;
    font-size: 28rpx;
    vertical-align: middle;
}
.tag_choose{
    background:  #2a8ce5;
    color: white;
    border: none;
}
/*-----------容器*/
.container .search {

  width: 100%;
  height:5%;
  padding: 12.5rpx 0 12.5rpx 15rpx;
  background: #2a8ce5;
}

.container .search-left {
  flex: 8;
  background: #4ea3e7;
  text-align: left;
}

.container .search-left input {
  display: inline-block;
  height: 65rpx;
  font-size: 26rpx;
}

.search-placeholder {
  color: #8ccefd;
  line-height: 20rpx;
}

.container .search .search-left image {
  display: inline-block;
  width: 35rpx;
  height: 35rpx;
  padding: 15rpx 15rpx 15rpx 20rpx;
}

.container .search .search-right {
  flex: 1;
}

.container .search .search-right image {
  width: 45rpx;
  height: 45rpx;
  padding: 10rpx;
}
/*----------search部分*/

.feed-item {
  width: 690rpx;
  padding: 30rpx 30rpx 20rpx;
  margin: 7rpx 0 6rpx 0;
  background: #fff;
  border-top: 1px solid #eee;
  border-bottom: 1px solid #eee;
  box-shadow: 0 2px 5px #eee;
}


.feed-content {
  padding: 10rpx 0 0 0;
}

.question {
  font-size: 28rpx;
  font-weight: 600px;
  line-height: 40rpx;
}

.answer-body {
  padding: 10rpx 0 0 0;
  /*height: 10rpx;*/
  font-size: 24rpx;
  line-height: 28rpx;
  color: #5b5b5b;
  width: 100%;
}

.answer-actions {
  width: 690rpx;
  padding: 10rpx 0 0;
  color: #a0acac;
}

.lable-answer-actions {
  display: inline-block;
  vertical-align: text-bottom;
  padding: 0 10rpx 0 0;
  font-size: 24rpx;
}

/*-------------------------*/

.dynamic_card {
  border: 2px solid #fff;
  border-radius: 5px;
  background-color: #fff;
  box-shadow: 4px 1px 1px #ccc;
  width: 100%;
  margin: 10rpx 0 10rpx 0;
  background: #fff;
  border-top: 1px solid #eee;
  border-bottom: 1px solid #eee;
}

.dynamic_image {
  width: 100%;
  height: 400rpx;
  padding-top: 5rpx;
  background-color: #eee;
}

.dynamic_time {
  float: right;
  margin-top: 170px;
  color: #fff;
  position: absolute;
  right: 0;
  top: 0;
  z-index: 1;
  font-size: 12px;
}

.dynamic_title {
  padding: 14px;
  font-size: 14px;
}


