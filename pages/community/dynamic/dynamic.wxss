.dynamic_container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  /*padding: 200rpx 0;*/
  box-sizing: border-box;
  
}
.question_container{
  padding: 0;
  font-size: 14rpx;
  color: #000;
  background: #F0F4F3;
}
.dynamic_container .feed-item{
  width: 690rpx;
  padding: 30rpx 30rpx 20rpx;
  margin: 7rpx 0 6rpx 0;
  background: #ffffff;
  border-top: 1px solid #eee;
  border-bottom: 1px solid #eee;
  box-shadow: 0 2px 5px #eeeeee;
}
.dynamic_container .feed-item .feed-content{
  padding: 10rpx 0 0 0;

}
.dynamic_container .feed-item .feed-content .question text{
  font-size: 28rpx;
  font-weight: 600px;
  line-height: 40rpx;
}
.dynamic_container .feed-item .feed-content .answer-body{
  padding: 10rpx 0 0 0;
  /*height: 10rpx;*/
  font-size: 24rpx;
  line-height: 28rpx;
  color: #5b5b5b;
}
.answer-txt{
  height: 60rpx;
  overflow: hidden;
}
.answer-txt::after{
  content: "...";
}
.dynamic_container .feed-item .feed-content .answer-actions{
  width: 690rpx;
  padding: 10rpx 0  0;
  color: #a0acac;
}
.dynamic_container .feed-item .feed-content .answer-actions view{
  display: inline-block;
  vertical-align: text-bottom;
  padding: 0 10rpx 0 0;
  font-size: 24rpx;
}
.dynamic_container .feed-item .feed-content .answer-actions .dot ::after{
  content: "â€¢";
}
