<!--pages/community/index.wxml-->
<!-- 顶部切换 -->
<include src='/template/interActive.wxml' />


<view class="swiper-tab">
  <view class="swiper-tab-list swiper-left {{currentTab==0 ? 'on' : ''}}" data-current="0" bindtap="swichNav">
    解题帮
  </view>

  <view class="swiper-tab-list swiper-right {{currentTab==1 ? 'on' : ''}}" data-current="1" bindtap="swichNav">
    排行榜
  </view>

</view>

<!-- 置顶广告部分 -->
<swiper indicator-dots="true" autoplay="true" id='banner' class='banner' wx:if="{{false}}">
  <block wx:for="{{bannerList}}" wx:key="index">

    <swiper-item>
      <image mode="aspectFit" src="{{item.imgSrc}}" />
    </swiper-item>
  </block>

</swiper>


<!-- 内容部分 -->
<!-- 动态圈板块-->
<view id="dynamic" hidden="{{currentTab != 0}}">
  <view class="search flex-wrp " style='background:#f85f48;'>

    <view class="search-left flex-item">


      <text class='button_text' catchtap='add_dynamic'> 写问题</text>

    </view>

  </view>
  <dynamics refresh='{{dynamics_refresh}}' />
</view>

<!-- 排行榜板块-->
<view id="rank" hidden="{{currentTab != 1}}">

  <view class="frame">
    <view class="tag">
      <text class='a'>top 3</text>
    </view>
    <view>

      <user userID='110' model='2' />
      <user userID='110' model='2' />
      <user userID='110' model='2' />

    </view>
  </view>


</view>