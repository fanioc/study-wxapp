<view>
  <!-- 课表显示页面 -->
  <view style='text-align:center;'>第{{term.week}}周</view>

  <view>
    <view class='week'>

      <view style='margin:50px 3px 0 3px;'>
        <!-- 每节课的时间 -->
        <view wx:for="{{config.tableHead.time}}" class='week-time'>
          
            <view style='font-size: 16px;color:#000;'>{{index+1}}</view>
            <view>{{item}}</view>
          

        </view>
      </view>

      <view wx:for="{{config.tableHead.week}}" style='flex:1;'>
        <!-- 周几-->
        <view class='week-title'>
          <view>{{item}}</view>
          <view class='week-title-little'>{{config.tableHead.date[index]}}日</view>
        </view>

        <view class='week-table'> </view>
        <view class='week-table'> </view>
        <view class='week-table'> </view>
        <view class='week-table'> </view>
        <view class='week-table'> </view>
      </view>

    </view>
  </view>
</view>