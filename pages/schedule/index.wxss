/* pages/schedule/index.wxss */

.week {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.week-title {
  display: flex;
  flex-direction: column;
  justify-content: center;
  font-size: 17px;
  height: 50px;
  text-align: center;
}

.week-title-little {
  margin: 3px 0 0 0;
  font-size: 12px;
  color: #888;
  text-align: center;
}

.week-time {
  display: flex;
  flex-direction: column;
  justify-content: center;
  height: 60px;
  font-size: 12px;
  color: #888;
  text-align: center;
}

.week-table {
  /* box-sizing: border-box; */
  background: #888;
  height: 118px;
  margin: 2px 2px 0 0;
  border-radius: 5px;
}
