/* pages/schedule/index.wxss */

.week {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.week-title {
  display: flex;
  flex-direction: column;
  justify-content: center;
  font-size: 17px;
  height: 50px;
  text-align: center;
}

.week-title-little {
  margin: 3px 0 0 0;
  font-size: 12px;
  color: #888;
  text-align: center;
}

.week-time {
  display: flex;
  flex-direction: column;
  justify-content: center;
  height: 60px;
  font-size: 12px;
  color: #888;
  text-align: center;
}

.week-table-font {
  /* box-sizing: border-box; */
  width: auto;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 3px;
  font-size: 13px;
  text-align: center;
  color: #ffffff;
     box-sizing: border-box; 

  margin: 0px 2px 0 0;
  border-radius: 5px;
}

.week-table-1 {
  /* box-sizing: border-box; */
  background: #cce6ff;
  height: 58px;

}

.week-table-2 {
  /* box-sizing: border-box; */
  background: #ffbf80;
  height: 118px;

}
