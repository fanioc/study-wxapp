/* pages/schedule/index.wxss */

page {
  background-color: #fff;
  height: 100%;
  /* position: absolute; */
  width: 100%;
}

.topNav {
  box-sizing: border-box;
  padding-top: 35px;
  height: 70px;
  z-index: 100;
  position: fixed;
  width: 100%;
  background-color: #22b36e;
  /* padding: 40px 0 10px 0; */
}

.currentWeek{
  position: absolute; 
  margin: 0 auto;
  width: 100%;
  color: #fff;
  font-size: 20px;
  font-weight: bold;
  text-align: center;
}

.fixed-button{
  z-index: 100;
  position: fixed;
  right: 40px;
  bottom: 40px;
  width: 70px;
  height:70px;
  border-radius: 50%;
  background-image: linear-gradient(-225deg, #FFE29F 0%, #FFA99F 48%, #FF719A 100%);
  opacity: 0.5;
  box-shadow: 0 0 8px rgba(0, 0, 0, 0.2);
}

.setting{
  border:#fff solid 1px;
  border-radius: 5px;
  padding: 0 2px;
 color: #fff;
  font-size: 20px;
  /* font-weight: bold; */
  text-align: center;
  letter-spacing:2px;

  position: absolute;
  left: 10px;
}

.week {
  /* color: #fff;  */
  position: absolute;
  top: 70px;
   width: 100%; 
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.week-title {
  display: flex;
  flex-direction: column;
  justify-content: center;
  font-size: 30rpx;
  height: 100rpx;
  text-align: center;
}

.week-title-little {
  margin: 5rpx 0 0 0;
  font-size: 23rpx;
  color: #888;
  text-align: center;
}

.week-time {
  display: flex;
  flex-direction: column;
  justify-content: center;
  height: 100rpx;
  color: #888;
  text-align: center;
}

.week-table-font {
  /* box-sizing: border-box; */
  width: auto;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 8rpx;
  font-size: 25rpx;
  text-align: left;
  color: #fff;
  box-sizing: border-box;
  margin: 0px 2rpx 0 2rpx;
  border-radius: 5px;
}

.week-no-class {
  /* box-sizing: border-box; *//* background: #cce6ff;  */
  color: #888;
  height: 97rpx;
  width: 96%;
}

.week-no-class:active {
  /* box-sizing: border-box; */
