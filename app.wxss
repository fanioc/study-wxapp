page{
  background-color: #f3f3f3;
}

.swiper-tab {
  padding: 10px 0px;
  height: 30px;
  line-height: 30px;
  background: #fff;
  display: flex;
  position: relative;
  z-index: 2;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  color: #f85f48;
  border-color: #f85f48;
}

.swiper-tab-list {
  text-align: center;
  border: solid 2rpx #f85f48;
  margin: 10px 0px;
  padding: 0 6px;
  width: 60px;
  font-size: 28rpx;
  font-family: Helvetica,
                 Arial,
                 "Hiragino Sans GB",
                 "Source Han Sans CN",
                 "PingFang SC",
                 Roboto,
                 "微软雅黑",
                 "Heiti SC",
                 "Microsoft Yahei",
                 sans-serif;
}

.swiper-left {
  border-radius: 0.3rem 0 0 0.3rem;
}

.swiper-right {
  border-radius: 0 0.3rem 0.3rem 0;
}

.on {
  color: #fff;
  background: #f85f48;
}

/*/--------顶部滑块css--------*/

.fullscreen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99999999;
  background: white;
  overflow-y: scroll;
}

/*/--------全屏显示css--------*/

.hr {
  margin-top: 10rpx;
  text-align: center;
}

b {
  font-weight: bold;
}

i {
  font-style: italic;
}

green {
  color: green;
  font-weight: bold;
}

/*/--------基础--------*/

.dynamic_container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  /*padding: 200rpx 0;*/
  box-sizing: border-box;
  overflow: hidden;
}

/*/--------动态页面容器--------*/

.flex-wrp {
  display: flex;
}

.flex-item {
  flex-grow: 1;
  text-align: center;
}

.search {
  width: 735rpx;
  height: 65rpx;
  padding: 12.5rpx 0 12.5rpx 15rpx;
  background: lightblue;
}

.search-left {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}

.search .search-left image {
  display: inline-block;
  width: 70rpx;
  height: 70rpx;
  margin-top: 20rpx;
}

.button_text {
  font-size: 40rpx;
  font-weight: bold;
  border-radius: 6rpx;
  border: none;
  width: 70%;
  margin-right: 40rpx;
  margin-left: 40rpx;
  background-color: white;
}

.button_text_on {
  color: LightGrey;
}

.middle_content {
}

.footer_button {
  z-index: 99999999;
  position: fixed;
  top: 93%;
  opacity: 0.8;
}

/*/--------置底的按钮--------*/

.lly_omit::after {
  content: '...';
}

text {
  word-break: break-all;
}

/*/----------------*/
.frame {
    background-color: #ffffff;
    border-radius: 10rpx;
    box-shadow: 8rpx 2rpx 2rpx #cccccc;
    margin: 16rpx;
    padding: 32rpx;
    position: relative;
}

.tag {
    font-size: 14px;
    font-weight: 900;
    margin-bottom: 8px;
}

.singleItem {
    font-size: 12px;
    margin-bottom: 6px;
    color: darkgray;
}
/*/----------------*/