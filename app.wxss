@import "extends/zan/index.wxss";

page{
  background-color: #f3f3f3;
}

.view-box {
  width: 100%;
  height: 100%;
  position: absolute;
}

.flex-all{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.flex-x{
  display: flex;
  flex-direction:row;
}

.flex-y{
  display: flex;
  flex-direction:column;
}

.float-centert-a{
  float: left;
  left: 50%;
  position: absolute; 
}

.float-centert-b{
  position: relative;
  float: right;
  right: 50%;
}

.shadow{
	box-shadow: 0 2px 8px 0 rgba(0, 0, 0, 0.1), 0 0px 10px 0 rgba(0, 0, 0, 0.10);
}



/*------------*/


.hr {
  margin-top: 10rpx;
  text-align: center;
}

b {
  font-weight: bold;
}

i {
  font-style: italic;
}

green {
  color: green;
  font-weight: bold;
}

/*/--------基础--------*/

.dynamic_container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  /* padding: 20rpx 0 20rpx 0; */
  box-sizing: border-box;
  overflow: hidden;
}

/*/--------多个动态页面的容器--------*/

.flex-wrp {
  display: flex;
}

.flex-item {
  flex-grow: 1;
  text-align: center;
}



.search-left {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}

.search-bottom{
  z-index: 99;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  position: fixed;
  bottom: 0px;
}

.search .search-left image {
  display: inline-block;
  width: 70rpx;
  height: 70rpx;
  margin-top: 20rpx;
}


.button_text {
  font-size: 40rpx;
  font-weight: bold;
  border-radius: 6rpx;
  border: none;
  width: 70%;
  margin-right: 40rpx;
  margin-left: 40rpx;
  background-color: white;
}


.footer_button {
  /* z-index: 99999999; */
  position: fixed;
  bottom: 0px;
  /* opacity: 0.8; */
}

/*/--------置底的按钮--------*/



text {
  word-break: break-all;
}

/*/----------------*/
.frame {
    background-color: #ffffff;
    border-radius: 5px;
    box-shadow: 0 2px 8px 0 rgba(0, 0, 0, 0.1), 0 0px 10px 0 rgba(0, 0, 0, 0.10);
    margin: 8px 15px 15px 15px;
    padding: 16px;
    position: relative;
}

.tag {
    font-size: 14px;
    font-weight: 900;
    margin-bottom: 8px;
}

.singleItem {
    font-size: 12px;
    margin-bottom: 6px;
    color: darkgray;
}
